@{
    ViewData["Title"] = "Employee";
}
<div ng-app="app.employees" ng-init="id=@ViewBag.Id">
    <h2>@ViewData["Title"]</h2>

    <div ng-controller="employeeController as c">
        <dl class="dl-horizontal">
            <dt>First Name</dt>
            <dd>{{c.employee.person.firstName}}</dd>
            <dt>Surname</dt>
            <dd>{{c.employee.person.lastName}}</dd>
            <dt>Date of Birth</dt>
            <dd>{{c.employee.birthDate | date:dd-MM-yyyy}}</dd>
            <dt>Gender</dt>
            <dd>{{c.employee.gender}}</dd>
            <dt>National Id</dt>
            <dd>{{c.employee.nationalIdnumber}}</dd>
            <dt>Login Id</dt>
            <dd>{{c.employee.loginId}}</dd>
            <dt>Hired Date</dt>
            <dd>{{c.employee.hireDate | date:dd-MM-yyyy}}</dd>
            <dt>Vacation Hours</dt>
            <dd>{{c.employee.vacationHours}}</dd>
            <dt>Sick Leave Hours</dt>
            <dd>{{c.employee.sickLeaveHours}}</dd>
        </dl>
    </div>
</div>

@section Scripts {
    <script src="~/js/app/employees/employees.module.js"></script>
    <script src="~/js/app/employees/employee.controller.js"></script>
    <script src="~/js/app/employees/employee.service.js"></script>
}